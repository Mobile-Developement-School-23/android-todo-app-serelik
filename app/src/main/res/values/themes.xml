<resources>
    <!-- Base application theme. -->
    <style name="Base.Theme.ToDoApp" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="Theme.ToDoApp" parent="Base.Theme.ToDoApp">
        <item name="android:windowBackground">@color/back_primary</item>
        <item name="android:statusBarColor">@color/back_primary</item>
        <item name="checkboxStyle">@style/checkbox</item>
        <item name="colorPrimary">@color/back_primary</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="android:actionMenuTextColor">@color/blue</item>
        <item name="android:actionMenuTextAppearance">@style/Button</item>
        <item name="android:datePickerDialogTheme">@style/DatePickerDialogTheme</item>
        <item name="android:timePickerDialogTheme">@style/TimePickerDialogTheme</item>
    </style>

    <style name="DatePickerDialogTheme" parent="android:Theme.Material.Light.Dialog">
        <item name="android:windowBackground">@color/back_secondary</item>
        <item name="android:colorAccent">@color/blue</item>
        <item name="colorOnPrimary">@color/blue</item>
        <item name="android:textColorSecondary">@color/label_tertiary</item>


        <item name="textAppearanceBody1">@color/label_primary</item>
        <item name="android:textColorPrimary">@color/label_primary</item>
        <item name="android:textColorPrimaryInverse">@color/white</item>
        <item name="android:textColorSecondaryInverse">@color/white</item>
    </style>

    <style name="TimePickerDialogTheme" parent="android:Theme.Material.Light.Dialog">
        <item name="android:windowBackground">@color/back_secondary</item>
        <item name="android:numbersSelectorColor">@color/back_secondary</item>
        <item name="android:colorControlActivated">@color/blue</item>
        <item name="android:numbersInnerTextColor">@color/blue</item>
        <item name="android:colorAccent">@color/blue</item>
        <item name="colorOnPrimary">@color/blue</item>
        <item name="android:textColorSecondary">@color/label_primary</item>


        <item name="textAppearanceBody1">@color/label_primary</item>
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:textColorSecondaryInverse">@color/black</item>
        <item name="android:textColorPrimaryInverse">@color/black</item>
    </style>
</resources>